<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="learning.java.hibernate.app.withoutIDE.Employee" table="employee">
        <id name="id" type="java.lang.Integer">
            <column name="id"></column>
            <generator class="identity"></generator>
        </id>
        <property name="firstName">
            <column name="fname"></column>
        </property>
        <property name="lastName">
            <column name="sname"></column>
        </property>
        <one-to-one name="PanCardDetails" class="learning.java.hibernate.app.withoutIDE.PanCardDetails"
                    cascade="save-update">
        </one-to-one>
        <set name="dailyAttendence" table="emp_attendence" 
            inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id" not-null="true" />
            </key>
            <one-to-many class="learning.java.hibernate.app.withoutIDE.EmployeeAttendence" />
        </set>
    </class>
</hibernate-mapping>